# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database names for each service
TAE_POSTGRES_DB=aml_monitoring
REGULATORY_DB_NAME=regulatory_db
REMEDIATION_DB_NAME=aml_workflows

# Legacy database URL (for services still using SQLite)
DATABASE_URL=sqlite+aiosqlite:///./aml_remediation.db

# ===========================================
# API Keys
# ===========================================
GROQ_API_KEY=your_groq_api_key_here # PLEASE DO NOT SHARE
GROQ_MODEL=llama-3.3-70b-versatile

# ===========================================
# Service Ports
# ===========================================
TAE_PORT=8002
REGULATORY_PORT=8003
REMEDIATION_PORT=8004
FRONTEND_PORT=3000

# ===========================================
# Application Configuration
# ===========================================
LOG_LEVEL=INFO
WORKERS=4
ENVIRONMENT=development
DEBUG=True

# ===========================================
# SMTP Configuration (for Remediation Service)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SERVER=smtp.company.com
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=compliance@juliusbaer.com

# ===========================================
# PgAdmin Configuration
# ===========================================
PGADMIN_EMAIL=admin@aml.com
PGADMIN_PASSWORD=admin123

# ===========================================
# Frontend Configuration
# ===========================================
# These are set automatically in docker-compose.yml
# but can be overridden for local development
# NEXT_PUBLIC_TAE_API_URL=http://localhost:8002
